<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.CalendarFragment"
    android:background="@drawable/backscreen2">


    <com.marcohc.robotocalendar.RobotoCalendarView
        android:id="@+id/robotoCalendarPicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/backscreen2">

    </com.marcohc.robotocalendar.RobotoCalendarView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/plus"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/robotoCalendarPicker"
        app:layout_constraintEnd_toEndOf="@+id/robotoCalendarPicker"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="@+id/robotoCalendarPicker"
        app:layout_constraintTop_toTopOf="@+id/robotoCalendarPicker"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>