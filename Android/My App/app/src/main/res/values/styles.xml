<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange_inactive</item>
        <item name="colorPrimaryDark">@color/orange_inactive</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>

    </style>

    <style name="Splash" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/red_inactive</item>
        <item name="colorControlNormal">@color/circleColor</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="colorAccent">@color/orange_inactive</item>
        <item name="colorPrimary">@color/red_inactive</item>
        <item name="android:textColorPrimary">@color/default_inactive</item>
    </style>

    <style name="CalendarViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="CalendarViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/orange_inactive</item>
    </style>

</resources>
